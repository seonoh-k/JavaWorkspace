
public class StudentMain {

	public static void main(String[] args) {

		Student st = new Student();
		
		st.name = "안성길";
		st.grade = 3;
		st.classNum = 2;
		st.number = 24;
		st.kor = 90;
		st.math = 80;
		st.eng = 67;
		
		st.introduce();
		System.out.println("===============");
		
		st.point(80, 90, 70);
		
		Student st1 = new Student("홍길동", 1, 3, 28, 80, 90, 70);
		Student st2 = new Student("박혁거세", 2, 5, 14, 77, 65, 95);
		
		System.out.println("이름 : " + st1.name);
		System.out.println("학년 : " + st1.grade);
		System.out.println("반 : " + st1.classNum);
		System.out.println("번호 : " + st1.number);
		System.out.println("국어 : " + st1.kor);
		System.out.println("수학 : " + st1.math);
		System.out.println("영어 : " + st1.eng);
		System.out.println("총점 : " + st1.sum());
		System.out.println("평균 : " + st1.avg());
		
		System.out.println("===============");
				
		System.out.println("이름 : " + st2.name);
		System.out.println("학년 : " + st2.grade);
		System.out.println("반 : " + st2.classNum);
		System.out.println("번호 : " + st2.number);
		System.out.println("국어 : " + st2.kor);
		System.out.println("수학 : " + st2.math);
		System.out.println("영어 : " + st2.eng);
		System.out.println("총점 : " + st2.sum());
		System.out.println("평균 : " + st2.avg());
		
	}

}
