
public class Tv {

	// 속성 : 색상, 전원버튼, 채널
	// 기능 : 전원 온오프, 채널 증가 감소
	
	
	String color;
	String power;
	int channel;
	
	void powerBtn(String power) {
		if(power == "on") {
			power = "off";
		}else if(power == "off") {
			power = "on";
		}
	}
	
	void channelUp(int channel) {
		if(channel == 1) {
			channel = 2;
		}
	}
	
	void channelDown(int channel) {
		if(channel == 2) {
			channel = 1;
		}
	}
	
}
