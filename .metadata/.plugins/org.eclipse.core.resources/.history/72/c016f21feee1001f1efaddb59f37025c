
public class Point3D extends Point {

	int x;
	int y;
	int z;
	
//	Point3D() { 자식 클래스의 기본 생성자
//		super(); // Point(); 부모의 생성자 호출
//	}
	
//	Point3D() {
//		super(); // 부모의 기본 생성자 호출 생략 가능
//		this.x = x;
//		this.y = y;
//		this.z = z;
//	}
	
	Point3D(int x, int y, int z) {
		super(x, y); // Point(x, y);
		this.z = z;
	}
	
	// 오버라이드 : 메소드의 재정의
	// 상속에서 부모의 메소드를 다식이 재정의 하는 것
	// 메소드는 부모의 메소드와 동일해야한다.
	// 다형성의 형태이다.
	String getLocation() { 
		return "x = " + x + ", y = " + y + ", z = " + z;
	}
	
}
